<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home_backgroud"
    android:orientation="vertical">

    <include
        layout="@layout/head_title"
        android:id="@id/relTop"
        >
    </include>
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_item_selector"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品牌："
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="40dp"
            android:id="@+id/iv_brand"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"
            android:textSize="20sp"
           android:layout_toRightOf="@id/iv_brand"
            android:layout_centerInParent="true"
            android:paddingLeft="15dp"
            android:id="@+id/brand"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/listview_item_imageselector"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:paddingRight="20dp"

            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff0000"
        ></View>
    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_item_selector"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格："
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="40dp"
            android:id="@+id/iv_price"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"
            android:textSize="20sp"
            android:layout_toRightOf="@id/iv_price"
            android:layout_centerInParent="true"
            android:paddingLeft="15dp"
            android:id="@+id/price"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/listview_item_imageselector"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:paddingRight="20dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff0000"
        ></View>
    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_item_selector"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="功能："
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="40dp"
            android:id="@+id/iv_gongneng"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"
            android:textSize="20sp"
            android:layout_toRightOf="@id/iv_gongneng"
            android:layout_centerInParent="true"
            android:paddingLeft="15dp"
            android:id="@+id/gongneng"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/listview_item_imageselector"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:paddingRight="20dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff0000"
        ></View>
    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_item_selector"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="库存："
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="40dp"
            android:id="@+id/iv_kucun"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"
            android:textSize="20sp"
            android:layout_toRightOf="@id/iv_kucun"
            android:layout_centerInParent="true"
            android:paddingLeft="15dp"
            android:id="@+id/kucun"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/listview_item_imageselector"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:paddingRight="20dp"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff0000"
        ></View>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SearchNull"
        android:text="确定"
        android:textSize="18sp"
        android:id="@+id/ok"
        android:gravity="center"
        android:textColor="@drawable/btn_textcolor_selector"
        android:background="@drawable/product_detail_shop"
       android:layout_gravity="center"
        />

</LinearLayout>