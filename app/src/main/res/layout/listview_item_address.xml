<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shape_corners"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_receive_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="收货地址"
                android:textColor="#000000"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/tv_address_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_receive_address"
                android:layout_marginLeft="20dp"
                android:text="位敏"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_address_item_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_address_item_name"
                android:layout_marginLeft="20dp"
                android:text="186********"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_address_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_address_item_number"
                android:layout_marginLeft="20dp"
                android:text="北京市朝阳区东三环中路39号建外soho17号楼802"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/iv_address_item_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ok"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
