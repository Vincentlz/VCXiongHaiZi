<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_no_product_show_bar"
        android:padding="10dp"
        android:visibility="gone"
        style="@style/product_attrib_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_long"
        android:gravity="center_vertical"
        android:text="已无货商品" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:paddingTop="14dp">


        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/about" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="商品标题"
                android:textSize="@dimen/title_textsize"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        style="@style/product_attrib_text"
                        android:text="数量：" />

                    <TextView
                        android:id="@+id/tv_product_num"
                        style="@style/product_attrib_text"
                        android:text="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        style="@style/product_attrib_text"
                        android:text="尺码：" />

                    <TextView
                        android:id="@+id/tv_product_size"
                        style="@style/product_attrib_text"
                        android:text="M" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        style="@style/product_attrib_text"
                        android:text="颜色：" />

                    <TextView
                        android:id="@+id/tv_product_color"
                        style="@style/product_attrib_text"
                        android:text="灰" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        style="@style/product_attrib_text_red"
                        android:text="价格："
                        android:textColor="@color/bg_title" />

                    <TextView
                        android:id="@+id/tv_product_price"
                        style="@style/product_attrib_text_red"
                        android:text="￥181.00" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/product_attrib_text_red"
                    android:text="小计:" />

                <TextView
                    android:id="@+id/tv_product_xiaoji"
                    style="@style/product_attrib_text_red"
                    android:text="￥181.00" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>