<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:paddingBottom="8.0dip"
android:paddingTop="8.0dip" >

<RelativeLayout
    android:id="@id/relImage"
    android:layout_width="82.0dip"
    android:layout_height="82.0dip"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="10.0dip" >

    <ImageView
        android:id="@id/goodsIconIv"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_marginLeft="1.0dip"
        android:layout_marginTop="1.0dip" />

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_80" />


</RelativeLayout>

<RelativeLayout
    android:id="@id/relContent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="5.0dip"
    android:layout_marginRight="10.0dip" >

    <TextView
        android:id="@+id/textClothesName"
        style="@style/style_15_666666_BOLD"
        android:layout_width="180.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:text="123"
        android:maxLines="2" />

    <TextView
        android:id="@id/textClothesPrice"
        style="@style/style_15_C21513_BOLD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textClothesName"
        android:layout_marginTop="5.0dip"
        android:text="￥150"/>

    <TextView
        android:id="@id/textProductComment"
        style="@style/style_15_666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_below="@id/textClothesPrice"
        android:text="已有" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow" />
</RelativeLayout>

</LinearLayout>